# ============================================
# ОБЩИЕ НАСТРОЙКИ (для всех окружений)
# ============================================

# Telegram
TELEGRAM_BOT_TOKEN=ваш-телеграм-токен
TELEGRAM_BOT_USERNAME=ваш_bot_username

# JWT
JWT_ACCESS_TOKEN_LIFETIME=86400
JWT_REFRESH_TOKEN_LIFETIME=604800

# Приложение
DEFAULT_PAGE_SIZE=5
MAX_PAGE_SIZE=50
HABIT_MAX_DURATION=120
HABIT_MAX_BREAK_DAYS=7

# CORS (настройте под свой фронтенд)
CORS_ALLOWED_ORIGINS=http://localhost:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000

# Время и язык
TIME_ZONE=Europe/Moscow
LANGUAGE_CODE=ru-ru