# ============================================
# ПРИМЕР НАСТРОЕК ОКРУЖЕНИЯ (.env.example)
# Скопируйте в .env и заполните своими значениями
# ============================================

# Django
DEBUG=True
DJANGO_SECRET_KEY=ваш-секретный-ключ-минимум-50-символов-смените-в-продакшене

ALLOWED_HOSTS=localhost,127.0.0.1,db,redis,web
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database (Docker)
POSTGRES_DB=habitflow_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=надежный-пароль-для-postgres
POSTGRES_HOST=db  # ← Важно: в Docker используем имя сервиса
POSTGRES_PORT=5432

# Redis (Docker)
REDIS_HOST=redis  # ← Важно: в Docker используем имя сервиса
REDIS_PORT=6379
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Telegram Bot
TELEGRAM_BOT_TOKEN=ваш-токен-от-botfather
TELEGRAM_BOT_USERNAME=имя-вашего-бота

# JWT
JWT_ACCESS_TOKEN_LIFETIME=86400    # 24 часа
JWT_REFRESH_TOKEN_LIFETIME=604800  # 7 дней

# Приложение
DEFAULT_PAGE_SIZE=5
MAX_PAGE_SIZE=50
HABIT_MAX_DURATION=120
HABIT_MAX_BREAK_DAYS=7
